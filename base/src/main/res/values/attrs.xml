<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="DrawableTextView">
        <attr name="drawableSrc" format="reference"/>
        <attr name="drawable_padding_left" format="dimension"/>
        <attr name="drawable_padding_right" format="dimension"/>
        <attr name="drawable_padding_top" format="dimension"/>
        <attr name="drawable_padding_bottom" format="dimension"/>
        <attr name="drawable_width" format="dimension"/>
        <attr name="drawable_height" format="dimension"/>
        <attr name="drawable_loc">
            <enum name="top" value="0"/>
            <enum name="bottom" value="1"/>
            <enum name="left" value="2"/>
            <enum name="right" value="3"/>
        </attr>
    </declare-styleable>

</resources>